<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="24dp"
	android:background="@color/backgroundLight">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center_horizontal"
		tools:ignore="ExtraText">

		<!-- Welcome Title -->
		<TextView
			android:id="@+id/welcomeTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/welcome"
			android:textStyle="bold"
			android:textSize="24sp"
			android:layout_marginBottom="16dp" />

		<!-- Card Glass Panel for Student Info -->
		<androidx.cardview.widget.CardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="24dp"
			android:layout_gravity="center_horizontal"
			app:cardElevation="6dp"
			app:cardCornerRadius="16dp"
			android:background="@drawable/bg_glass_blur">

			<LinearLayout
				android:layout_width="250dp"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="16dp">

				<TextView
					android:id="@+id/studentId"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/student_id"
					android:textSize="14sp"
					android:textColor="@color/textPrimary"
					android:layout_marginBottom="8dp" />

				<TextView
					android:id="@+id/email"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/email_label"
					android:textSize="14sp"
					android:textColor="@color/textPrimary" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<!-- Buttons -->
		<!-- Buttons -->
		<Button
			android:id="@+id/libraryButton"
			android:layout_width="250dp"
			android:layout_height="50dp"
			android:text="LIBRARY"
			android:background="@drawable/button_primary"
			android:textColor="@android:color/white"
			android:layout_marginBottom="12dp" />

		<Button
			android:id="@+id/stationeryButton"
			android:layout_width="250dp"
			android:layout_height="50dp"
			android:text="STATIONERY"
			android:background="@drawable/button_primary"
			android:textColor="@android:color/white"
			android:layout_marginBottom="12dp" />


		<Button
			android:id="@+id/busStatusButton"
			android:layout_width="250dp"
			android:layout_height="50dp"
			android:text="@string/bus_status"
			android:background="@drawable/button_primary"
			android:textColor="@android:color/white"
			android:layout_marginBottom="12dp" />

		<Button
			android:id="@+id/paymentHistoryButton"
			android:layout_width="250dp"
			android:layout_height="50dp"
			android:text="@string/payment_history"
			android:background="@drawable/button_primary"
			android:textColor="@android:color/white"
			android:layout_marginBottom="12dp" />

		<!-- Logout button with VisionOS theme -->
		<Button
			android:id="@+id/logoutButton"
			android:layout_width="250dp"
			android:layout_height="50dp"
			android:background="@drawable/button_primary"
			android:text="@string/logout"
			android:textColor="@android:color/white"
			android:textStyle="bold"
			android:layout_marginTop="12dp" />

	</LinearLayout>
</ScrollView>
